<Window x:Class="proj1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proj1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    <Grid Background="LightGray">
        <Button x:Name="newClass" Click="newClassClick" Width="80" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0, 20, 20, 0" Style="{StaticResource newButton}">
            + New
        </Button>

        <WrapPanel x:Name="classDisplay" Width="650" Height="400" Margin="0, 30, 0, 0"></WrapPanel>

        <StackPanel x:Name="createPanel" Width="350" Height="200" Margin="0, 0, 0, 220" Background="WhiteSmoke" Visibility="Collapsed">
            <WrapPanel Height="30">
                <Label Style="{StaticResource classLabel}" Height="30" Width="270" HorizontalContentAlignment="Right">Enter a Classroom Name!</Label>
                <Label Style="{StaticResource classLabel}" Height="30" Width="40"></Label>
                <Button Style="{StaticResource exit}"></Button>
            </WrapPanel>

            <Label Width="200" Height="25" Margin="0, 30, 0, 0" FontSize="12" FontFamily="Segoe UI" Background="DarkGray">Enter a Class Name:</Label>
            <TextBox x:Name="uIn" Height="35" Width="200" MaxLength="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="16" FontFamily="Comic Sans MS"></TextBox>
            <Button x:Name="enterButton" Click="enterButtonClick" Margin="140, 0, 0, 0" Width="60" Background="LimeGreen">Enter</Button>
        </StackPanel>
    </Grid>
</Window>
